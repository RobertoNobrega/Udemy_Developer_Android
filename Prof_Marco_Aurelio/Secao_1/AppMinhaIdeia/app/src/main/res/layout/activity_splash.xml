<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashActivity"> <!-- Aqui, android:orientation="horizontal" , indica que a orientação desta tela
    (tela de splash), será vertical. Ou seja, quando for inserir os elementos de tela (localizado na paleta do AndroidStudio),
    um elemento ficará abaixo do outro. -->

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" /> <!-- Inserindo uma imagem na tela de splash.
            android:id="@+id/imgLogo"  // O id do ícone será imgLogo.
            android:layout_gravity="center"  // A imagem ficará no centro.
            android:layout_marginTop="120dp" // A imagem ficará com um espaço de 120dp (com relação ao início do topo da tela).
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" // Imagem. OBS: Aqui, na linha 18, a imagem exibida será para um tamanho de tela
            adequada para o dispositivo (ou seja, o Android terá mais de uma imagem e colocará a que se adequa ao dispositivo).
        -->

    <TextView
        android:id="@+id/textNomeApp"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" /> <!-- Inserindo um pequeno texto na tela de splash.
            android:id="@+id/textNomeApp" // Nome do id deste texto.
            android:layout_gravity="center" // Texto ficará no centro.
            android:layout_marginTop="180dp" // 180dp de espaço, em relação ao item anterior (ou seja, aqui, esse texto está
            abaixo da imagem acima).
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
        -->

    <TextView
        android:id="@+id/textAppVersion"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versão 1.0" /> <!-- Inserindo um segundo pequeno texto, na tela de splash. -->


</androidx.appcompat.widget.LinearLayoutCompat>